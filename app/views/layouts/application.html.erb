<!DOCTYPE html>
<html>
  <head>
    <title>Welcome</title>
      <%= stylesheet_link_tag    "application" %>
      <%= csrf_meta_tags %>
  </head>
  <body>

  <div id="nav">
    <% if current_user %>
      Logged in as <%= current_user.email %>.
      
      <%= link_to "Logout", logout_path, method: :post %>
    <% else %>
    <%= link_to "Sign up", apply_path %> or
  
      <%= link_to "Login", :login %>
    <% end %>
  </div>
  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>
  <%= yield %>

  </body>
</html>